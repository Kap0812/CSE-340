<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.locals.title = "Delete Vehicle"
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="delete-confirmation">
  <h2>Confirm Deletion</h2>
  
  <p class="warning">
    <strong>Warning:</strong> This action cannot be undone. 
    Are you sure you want to delete this vehicle?
  </p>

  <div class="vehicle-info">
    <p><strong>Make:</strong> <%= locals.inv_make %></p>
    <p><strong>Model:</strong> <%= locals.inv_model %></p>
    <p><strong>Year:</strong> <%= locals.inv_year %></p>
    <p><strong>Price:</strong> $<%= new Intl.NumberFormat('en-US').format(locals.inv_price) %></p>
  </div>

  <form action="/inv/delete" method="post">
    <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
    
    <div class="button-group">
      <button type="submit" class="delete-button">Yes, Delete Vehicle</button>
      <a href="/inv/" class="cancel-button">No, Cancel</a>
    </div>
  </form>
</div>

<style>
.delete-confirmation {
  max-width: 600px;
  margin: 2rem auto;
  padding: 2rem;
  border: 2px solid #dc3545;
  border-radius: 8px;
  background-color: #fff5f5;
}

.warning {
  color: #dc3545;
  font-size: 1.1rem;
  padding: 1rem;
  background-color: #ffe6e6;
  border-left: 4px solid #dc3545;
  margin: 1rem 0;
}

.vehicle-info {
  background-color: white;
  padding: 1rem;
  border-radius: 4px;
  margin: 1.5rem 0;
}

.vehicle-info p {
  margin: 0.5rem 0;
}

.button-group {
  display: flex;
  gap: 1rem;
  margin-top: 1.5rem;
}

.delete-button {
  background-color: #dc3545;
  color: white;
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 1rem;
  font-weight: bold;
}

.delete-button:hover {
  background-color: #c82333;
}

.cancel-button {
  background-color: #6c757d;
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 4px;
  text-decoration: none;
  display: inline-block;
  font-size: 1rem;
  font-weight: bold;
}

.cancel-button:hover {
  background-color: #5a6268;
}
</style>