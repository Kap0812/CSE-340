<section class="welcome-section">
    <h2>Welcome to CSE Motors!</h2>
    
    <div class="vehicle-display">
        <div class="vehicle-image">
            <img src="/images/vehicles/delorean.jpg" alt="DMC DeLorean">
        </div>
        
        <div class="vehicle-details">
            <h3>DMC DeLorean</h3>
            <ul class="features">
                <li>3 Cup holders</li>
                <li>Superman doors</li>
                <li>Fuzzy dice!</li>
            </ul>
            <button class="cta-button">Own Today</button>
        </div>
    </div>
</section>
<!-- Delorean Upgrades Section -->
<section class="upgrades-section">
    <h2>Delorean Upgrades</h2>
    <div class="upgrades-grid">
        <div class="upgrade-category">
            <h3>Flux Capacitor</h3>
            <div class="upgrade-options">
                <div class="upgrade-item">
                    <input type="radio" id="flux-standard" name="flux-capacitor" value="standard">
                    <div class="upgrade-content">
                        <div class="upgrade-image">
                            <img src="/images/upgrades/flux-cap.png" alt="Standard Flux Capacitor">
                        </div>
                        <label for="flux-standard" class="upgrade-label">
                            <span class="upgrade-name">Standard Flux Capacitor</span>
                        </label>
                    </div>
                </div>
                <div class="upgrade-item">
                    <input type="radio" id="flux-turbo" name="flux-capacitor" value="turbo" checked>
                    <div class="upgrade-content">
                        <div class="upgrade-image">
                            <img src="/images/upgrades/flux-cap.png" alt="Turbo Flux Capacitor">
                        </div>
                        <label for="flux-turbo" class="upgrade-label">
                            <span class="upgrade-name">Turbo Flux Capacitor</span>
                            <span class="upgrade-price">+$2,500</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <div class="upgrade-category">
            <h3>Exterior Options</h3>
            <div class="upgrade-options">
                <div class="upgrade-item">
                    <input type="checkbox" id="flame-decals" name="exterior" value="flame-decals">
                    <div class="upgrade-content">
                        <div class="upgrade-image">
                            <img src="/images/upgrades/flame.jpg" alt="Flame Decals">
                        </div>
                        <label for="flame-decals" class="upgrade-label">
                            <span class="upgrade-name">Flame Decals</span>
                            <span class="upgrade-price">+$250</span>
                        </label>
                    </div>
                </div>
                <div class="upgrade-item">
                    <input type="checkbox" id="bumper-stickers" name="exterior" value="bumper-stickers">
                    <div class="upgrade-content">
                        <div class="upgrade-image">
                            <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers">
                        </div>
                        <label for="bumper-stickers" class="upgrade-label">
                            <span class="upgrade-name">Bumper Stickers</span>
                            <span class="upgrade-price">+$35</span>
                        </label>
                    </div>
                </div>
                <div class="upgrade-item">
                    <input type="checkbox" id="hub-caps" name="exterior" value="hub-caps">
                    <div class="upgrade-content">
                        <div class="upgrade-image">
                            <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps">
                        </div>
                        <label for="hub-caps" class="upgrade-label">
                            <span class="upgrade-name">Hub Caps</span>
                            <span class="upgrade-price">+$180</span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

