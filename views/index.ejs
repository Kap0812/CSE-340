<%- include('partials/head') %>
<%- include('partials/header') %>
<%- include('partials/navigation') %>

<main class="main-content">
    <!-- Vehicle Hero Section -->
    <section class="vehicle-hero">
        <div class="vehicle-intro">
            <h1>Welcome to CSE Motors!</h1>
            <div class="vehicle-featured">
                <div class="vehicle-image">
                    <img src="/images/delorean.jpg" alt="DMC DeLorean - The timeless classic" loading="lazy">
                </div>
                <div class="vehicle-details">
                    <h2>DMC DeLorean</h2>
                    <ul class="features-list">
                        <li>3 Cup holders</li>
                        <li>Superman doors</li>
                        <li>Fuzzy dice!</li>
                    </ul>
                    <a href="/inventory/delorean" class="own-today-btn">Own Today</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Upgrades Section -->
    <section class="upgrades-section">
        <h2>DeLorean Upgrades</h2>
        <div class="upgrades-grid">
            <div class="upgrade-category">
                <h3>Flux Capacitor</h3>
                <div class="upgrade-options">
                    <div class="upgrade-option">
                        <input type="radio" id="flux-standard" name="flux-capacitor" value="standard">
                        <label for="flux-standard">Standard Flux Capacitor</label>
                    </div>
                    <div class="upgrade-option">
                        <input type="radio" id="flux-turbo" name="flux-capacitor" value="turbo" checked>
                        <label for="flux-turbo">Turbo Flux Capacitor (+$2,500)</label>
                    </div>
                </div>
            </div>

            <div class="upgrade-category">
                <h3>Exterior Options</h3>
                <div class="upgrade-options">
                    <div class="upgrade-option">
                        <input type="checkbox" id="flame-decals" name="exterior" value="flame-decals">
                        <label for="flame-decals">Flame Decals (+$250)</label>
                    </div>
                    <div class="upgrade-option">
                        <input type="checkbox" id="bumper-stickers" name="exterior" value="bumper-stickers">
                        <label for="bumper-stickers">Bumper Stickers (+$35)</label>
                    </div>
                    <div class="upgrade-option">
                        <input type="checkbox" id="hub-caps" name="exterior" value="hub-caps">
                        <label for="hub-caps">Hub Caps (+$180)</label>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Reviews Section -->
    <section class="reviews-section">
        <h2>DMC DeLorean Reviews</h2>
        <div class="reviews-grid">
            <div class="review-card">
                <div class="review-text">
                    "So fast it's almost like traveling in time."
                </div>
                <div class="review-rating">★★★★☆ <span>(4/5)</span></div>
                <div class="review-author">- Speed Racer Magazine</div>
            </div>
            
            <div class="review-card">
                <div class="review-text">
                    "Coolest ride on the road."
                </div>
                <div class="review-rating">★★★★☆ <span>(4/5)</span></div>
                <div class="review-author">- Auto Enthusiast Weekly</div>
            </div>
            
            <div class="review-card">
                <div class="review-text">
                    "I'm feeling McFly!"
                </div>
                <div class="review-rating">★★★★★ <span>(5/5)</span></div>
                <div class="review-author">- Marty M.</div>
            </div>
            
            <div class="review-card">
                <div class="review-text">
                    "The most futuristic ride of our day."
                </div>
                <div class="review-rating">★★★★½ <span>(4.5/5)</span></div>
                <div class="review-author">- Future Cars Today</div>
            </div>
            
            <div class="review-card">
                <div class="review-text">
                    "80's livin and I love it!"
                </div>
                <div class="review-rating">★★★★★ <span>(5/5)</span></div>
                <div class="review-author">- Retro Rides Fan</div>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>
</body>
</html>